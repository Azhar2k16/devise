<div class="container mt-4">

    <h2>Users: <%= @users.size %> </h2> 
<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered table-sm">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Confirmed</th>
                <th>Banned?</th>
                <th>Name</th>
                <th>Image</th>
                <th>Roles</th>
                <th class="colspan-3"></th>
            </tr>
        </thead>

        <tbody>
            <% @users.each do |user| %>

                <tr>
                    <td><%= link_to user.id, user_path(user)%></td>
                    <td><%= user.email %></td>
                    <td><%= boolen_label(user.confirmed?)%></td>
                    <td><%= boolen_label(user.access_locked?)%></td>
                    <td><%= user.name%></td>
                    <td>
                        <% if user.image.present? %>
                            <%= image_tag user.image, size: "30x30" %>
                        <% end %>
                    </td>
                    <td><%= user.active_roles.join(", ") %></td>
                    <td>
                        <% if current_user.admin? %>
                            <%= link_to 'Edit roles', edit_user_path(user), class: 'btn btn-sm btn-primary' %>
                            <%= link_to ban_status(user), ban_user_path(user), method: :patch, class: 'btn btn-sm btn-danger'   %>
                            <%= link_to 'Delete',user, method: :delete, data: {confirm: "Are you sure"}, class: 'btn btn-sm btn-danger'    %>
                        <% end %>
                    </td>
                    </tr>
                <% end %>
                </tr>

        </tbody>
    </table>
</div>

</div>